{
	"compilerOptions": {
		"module": "ES2022",
		"target": "ES2022",
		"removeComments": true,
		"preserveConstEnums": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "out",
		"allowJs": true
	},
	"include": ["**/*.ts"],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],
	"$schema": "https://json.schemastore.org/tsconfig"
}
